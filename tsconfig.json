{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["DOM", "ES2017"],
        "jsx": "react",
        "rootDir": "src",
        "downlevelIteration": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}
